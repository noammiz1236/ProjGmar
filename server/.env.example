# ============================================
# SmartCart Server Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (already in .gitignore)

# Database Connection
DATABASE_URL=postgresql://username:password@localhost:5432/smartcart_db

# Server Port (use 8000 to avoid Windows permission issues on lower ports)
PORT=8000

# Allowed frontend origins for CORS (used by Socket.io)
HOST_ALLOWED=http://localhost:5173

# JWT Secrets - CRITICAL: Generate strong random strings for production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production

# SMTP Configuration for Email Verification & Password Reset
# Leave empty for development mode (verification link returned in API response)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Application Environment
# Options: development, production
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
